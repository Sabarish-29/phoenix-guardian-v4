{
  "name": "PhoenixGuardianMobile",
  "displayName": "Phoenix Guardian",
  "expo": {
    "name": "Phoenix Guardian",
    "slug": "phoenix-guardian-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a365d"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.phoenixguardian.mobile",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Phoenix Guardian needs access to your microphone to record patient encounters for SOAP note generation.",
        "NSFaceIDUsageDescription": "Use Face ID to securely access your Phoenix Guardian account.",
        "UIBackgroundModes": ["audio", "fetch", "remote-notification"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a365d"
      },
      "package": "com.phoenixguardian.mobile",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.USE_BIOMETRIC",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.FOREGROUND_SERVICE"
      ]
    },
    "plugins": [
      "@react-native-firebase/messaging"
    ]
  }
}
