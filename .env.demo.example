# ============================================
# Phoenix Guardian - Demo Environment Config
# ============================================
# Copy this file to .env for demo purposes
# DO NOT use these values in production!
# ============================================

# =========================
# Database Configuration
# =========================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/phoenix_guardian
DB_HOST=localhost
DB_PORT=5432
DB_NAME=phoenix_guardian
DB_USER=postgres
DB_PASSWORD=postgres

# =========================
# Security Keys
# =========================
# Generate a new one for production: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=demo_secret_key_not_for_production_use_only_12345678
JWT_SECRET_KEY=demo_jwt_secret_key_not_for_production_use_only_1234

# Encryption key for PII/PHI fields (Fernet key - 32 bytes, base64 encoded)
# Generate: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=demo_encryption_key_32_bytes_here==

# =========================
# AI Configuration
# =========================
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Model settings
AI_MODEL=claude-sonnet-4-20250514
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.3

# =========================
# FHIR Integration
# =========================
# Mock FHIR server (for demo)
FHIR_SERVER_URL=http://localhost:8001
FHIR_AUTH_METHOD=none

# Epic FHIR (production - leave commented for demo)
# EPIC_FHIR_URL=https://fhir.epic.com/
# EPIC_CLIENT_ID=your_client_id
# EPIC_CLIENT_SECRET=your_client_secret

# Cerner FHIR (production - leave commented for demo)
# CERNER_FHIR_URL=https://fhir.cerner.com/
# CERNER_CLIENT_ID=your_client_id
# CERNER_CLIENT_SECRET=your_client_secret

# =========================
# Application Settings
# =========================
DEBUG=True
ENVIRONMENT=development
LOG_LEVEL=INFO

# API settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# =========================
# Session & Auth
# =========================
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# =========================
# Rate Limiting
# =========================
RATE_LIMIT_ENABLED=False
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =========================
# Demo Accounts (Pre-seeded)
# =========================
# These accounts are created by the seed script
# Admin:     admin@phoenixguardian.health / Admin123!
# Physician: dr.smith@phoenixguardian.health / Doctor123!
# Nurse:     nurse.jones@phoenixguardian.health / Nurse123!

# =========================
# Feature Flags
# =========================
FEATURE_SOAP_GENERATION=True
FEATURE_DRUG_INTERACTIONS=True
FEATURE_READMISSION_PREDICTION=True
FEATURE_HONEYTOKENS=True
FEATURE_AUDIT_LOGGING=True

# =========================
# ML Models
# =========================
THREAT_MODEL_PATH=models/threat_detector.pkl
READMISSION_MODEL_PATH=models/readmission_xgb.pkl

# =========================
# Redis (Optional - for caching)
# =========================
# REDIS_URL=redis://localhost:6379/0

# =========================
# Email (Disabled for demo)
# =========================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=noreply@phoenixguardian.health
# SMTP_PASSWORD=your_password

# ============================================
# END OF DEMO CONFIGURATION
# ============================================
